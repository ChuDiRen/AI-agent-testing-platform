# ========== 数据库配置 ==========
# 数据库类型: sqlite 或 mysql（如果连接失败会自动降级到sqlite）
DATABASE_TYPE=mysql

# MySQL 配置（默认，推荐生产环境）
DATABASE_URL_MYSQL=mysql+aiomysql://root:password@localhost:3306/testdb?charset=utf8mb4

# SQLite 配置（降级选项）
# DATABASE_URL_SQLITE=sqlite+aiosqlite:///./data.db

# 数据库调试: 是否打印SQL语句
SQLALCHEMY_ECHO=False

# ========== JWT 配置 ==========
SECRET_KEY=1234567812345678
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=5

# ========== 文件路径配置 ==========
KEY_WORDS_DIR=/keyswords
CASES_ROOT_DIR=/yamls
REPORT_ROOT_DIR=/report
REPORT_API_URL=http://127.0.0.1:8000/ApiReportViewer
REPORT_WEB_URL=http://127.0.0.1:8000
REPORT_APP_URL=http://127.0.0.1:8000

# ========== RabbitMQ 配置 ==========
# 如果连接失败会自动降级到内存消息队列
RABBITMQ_HOST=192.168.111.128
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin

# ========== Redis 配置 ==========
# 如果连接失败会自动降级到内存缓存
REDIS_HOST=192.168.111.128
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=admin123456

# ========== 内存缓存配置 ==========
# 缓存最大条目数（Redis降级时使用）
MEMORY_CACHE_MAXSIZE=10000
# 缓存默认过期时间（秒）（Redis降级时使用）
MEMORY_CACHE_TTL=3600

# ========== 内存消息队列配置 ==========
# 队列配置列表: [(队列名称, 消费者数量)]（RabbitMQ降级时使用）
MEMORY_QUEUE_LIST=[("web_queue", 3), ("app_queue", 3), ("api_queue", 6)]

# ========== MinIO 配置 ==========
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=apitest
MINIO_CLIENT_URL=http://localhost:9000
