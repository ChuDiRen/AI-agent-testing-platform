{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./src",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "module": "ESNext",
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.vue"]
}
