# ===== 应用配置 =====
DEBUG=True
APP_NAME=Enterprise RAG Knowledge Base
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1

# ===== 数据库配置 =====
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/enterprise_rag_kb
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ===== JWT 配置 =====
SECRET_KEY=your-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===== Redis 配置 =====
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ===== MinIO 配置 =====
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=enterprise-rag-kb
MINIO_SECURE=False

# ===== RAG 配置 =====
CHUNK_SIZE=512
CHUNK_OVERLAP=64
MAX_FILE_SIZE=52428800
TOP_K=5
SIMILARITY_THRESHOLD=0.7
RERANK_ENABLED=False
RERANK_TOP_K=3

# ===== 向量数据库配置 =====
VECTOR_STORE_TYPE=chromadb

# ChromaDB 配置
CHROMA_PERSIST_DIRECTORY=./data/chromadb
CHROMA_COLLECTION_NAME=enterprise_rag_kb

# Pinecone 配置（可选）
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-east1-gcp
# PINECONE_INDEX_NAME=enterprise-rag-kb

# Weaviate 配置（可选）
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your-weaviate-api-key

# ===== 嵌入模型配置 =====
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# OpenAI Embedding 配置（可选）
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
# OPENAI_EMBEDDING_API_KEY=your-openai-api-key

# ===== LLM 配置 =====
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# OpenAI 配置
OPENAI_API_KEY=your-openai-api-key
# OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic 配置（可选）
# ANTHROPIC_API_KEY=your-anthropic-api-key

# DeepSeek 配置（可选）
# DEEPSEEK_API_KEY=your-deepseek-api-key
# DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# ===== 文件存储配置 =====
UPLOAD_DIR=./data/uploads
PARSED_DIR=./data/parsed

# ===== OCR 配置 =====
ENABLE_OCR=false
TESSERACT_PATH=

# ===== 权限配置 =====
DEFAULT_USER_ROLE=user
DEFAULT_DEPT_ID=

# ===== API 限流配置 =====
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=100
