# 数据库配置
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/enterprise_rag_kb
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# JWT配置
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0

# MinIO配置（可选）
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=enterprise-rag-kb

# RAG配置
CHUNK_SIZE=512
CHUNK_OVERLAP=64
MAX_FILE_SIZE=52428800  # 50MB
TOP_K=5
SIMILARITY_THRESHOLD=0.7

# 向量数据库配置
VECTOR_STORE_TYPE=chromadb
CHROMA_PERSIST_DIRECTORY=./data/chromadb
CHROMA_COLLECTION_NAME=enterprise_rag_kb

# 嵌入模型配置
EMBEDDING_PROVIDER=local  # local, openai
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5

# OpenAI配置（如果使用OpenAI嵌入）
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# LLM配置
LLM_PROVIDER=openai  # openai, anthropic, deepseek
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# OpenAI LLM配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic配置（如果使用Claude）
ANTHROPIC_API_KEY=your-anthropic-api-key

# DeepSeek配置（如果使用DeepSeek）
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# 应用配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_DIR=./logs

# 文件存储配置
UPLOAD_DIR=./data/uploads
PARSED_DIR=./data/parsed

# 权限配置
DEFAULT_USER_ROLE=user
DEFAULT_DEPT_ID=

# API限流配置（可选）
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=100
