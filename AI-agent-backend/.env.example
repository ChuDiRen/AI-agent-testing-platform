# 应用配置
APP_NAME=AI-Agent-Backend
APP_VERSION=1.0.0
APP_DESCRIPTION=AI Agent Backend - 企业级五层架构FastAPI应用
DEBUG=True
ENVIRONMENT=development

# 服务器配置
HOST=0.0.0.0
PORT=8000
RELOAD=True

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/ai_agent_db
# 或者使用MySQL
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/ai_agent_db

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# CORS配置
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:8000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads/

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True

# 第三方API配置（可选）
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# 监控配置
ENABLE_METRICS=True
METRICS_PORT=9090

# 缓存配置
CACHE_TTL=3600  # 1小时
CACHE_PREFIX=ai_agent:
